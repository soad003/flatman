  </div>
</div>
<div class="row">
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        Teilen
        <button class="btn btn-primary btn-xs pull-right" type="button"><span class="glyphicon glyphicon-edit"></span></button>
      </div>
      <div class="panel-body">
          <div class="row">
            <div class="col-md-6">
              <div class="panel panel-default">
                  <div class="panel-heading">Verfügbar</div>
                  <div class="panel-body">
                    <ul>
                      <li>Bohrmaschine</li>
                      <li>Hammer</li>
                      <li>Lötkolben</li>
                    </ul>
                  </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="panel panel-default">
                  <div class="panel-heading">Verliehen</div>
                  <div class="panel-body">
                    <ul>
                      <li>Fahrrad -> (<a href="#">niki des Pferd</a>)</li>
                    </ul>
                  </div>
              </div>
            </div>
          </div>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        Gas/Strom
        <button class="btn btn-primary btn-xs pull-right" type="button"><span class="glyphicon glyphicon-edit"></span></button>
        <div class="btn-group btn-group-xs pull-right">
          <button type="button" class="btn btn-default">Monat</button>
          <button type="button" class="btn btn-default">Jahr</button>
          <button type="button" class="btn btn-default">5 Jahre</button>
        </div>
      </div>
      <div class="panel-body">
        <% content_for :script do %>
          <script type="text/javascript">
             var data = {
                      labels : ["January","February","March","April","May","June","July"],
                      datasets : [
                        {
                          fillColor : "rgba(220,220,220,0.5)",
                          strokeColor : "rgba(220,220,220,1)",
                          pointColor : "rgba(220,220,220,1)",
                          pointStrokeColor : "#fff",
                          data : [65,59,90,81,56,55,40]
                        },
                        {
                          fillColor : "rgba(151,187,205,0.5)",
                          strokeColor : "rgba(151,187,205,1)",
                          pointColor : "rgba(151,187,205,1)",
                          pointStrokeColor : "#fff",
                          data : [28,48,40,19,96,27,100]
                        }
                      ]
                    }
              var ctx = document.getElementById("myChart").getContext("2d");
              new Chart(ctx).Line(data,null);
          </script>
        <% end %>
        <canvas id="myChart" width="400" height="200"></canvas>
      </div>
    </div>
  </div>
</div>
