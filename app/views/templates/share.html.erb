<div class="row">
<div class="col-lg-8 col-md-12" ng-show="shareditems.length!==0">
		<div class="panel panel-success">
			<div class="panel-heading pointer" tooltip-placement="bottom" tooltip="<%= t(".available_info") %>">
			  	<span class="glyphicon glyphicon-home"></span> <%= t(".available_items") %></div>
			  <div class="panel-body list-group">
			  	
		    		<div class="sharing-item  si-hidden-{{item.hidden}}"
		    			ng-repeat="item in shareditems | filter:qa | filter:{ available: 'true'}">
	      				<!-- item header-->
	      				<div class="input-group">
								
	          					<h3 class="panel-title form-control">{{item.name}}</h3>
	          					
	          				<!-- edit box -->
	          				<div class="input-group-btn">
						        <button  type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
						        	<span class="glyphicon glyphicon-pencil"></span>
						        </button>
	
						        <ul class="dropdown-menu pull-right">
						        	<li>
										<a href="/#/shareditem/{{item.id}}">
											<span class="glyphicon glyphicon-pencil"></span> <%= t(".item_edit") %>
										</a>
									</li>
						        	<li>
						        		<a class="pointer" ng-click="borrowItem(item)">
						        			<span class="glyphicon glyphicon glyphicon-road"></span> <%= t(".item_borrow") %>
					        			</a>
						        	</li>
									<li>
						        		<a ng-show="!item.hidden" class="pointer" ng-click="hideItem(item)">
						        			<span  class="glyphicon glyphicon-eye-open"></span> <%= t(".item_hide") %>
						        		</a>
						        		<a ng-show="item.hidden" class="pointer" ng-click="hideItem(item)">
						        			<span  class="glyphicon glyphicon-eye-open"></span> <%= t(".item_unhide") %>
						        		</a>
						        	</li>
						        	<li>
						        		<a class="pointer" 	ng-click="removeItem('<%= t(".confirm_delete") %>', item)">
						        			<span class="glyphicon glyphicon-remove"></span> <%= t(".item_remove") %>
						        		</a>
						        	</li>
	
	
						        </ul>
					     	 </div><!-- edit box-->
	      				</div><!-- item header -->
			        </div>
			  </div>


		</div>
</div>


