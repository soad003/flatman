<div class="page-header">
      <h1 class="pull-left">
        <span class="fa fa-share"></span> <%= t(".title") %>
      </h1>
      
	<div class="btn-group btn-group-header visible-lg">
			<form role="form" class="pull-right" ng-submit="addItem()" name="addItemForm">
