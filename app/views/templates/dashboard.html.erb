<% content_for :robots, "NOINDEX, NOFOLLOW" %>

<% content_for :title, t('.page_title') %>

<section class="hidden-print">
  <h1 class="page-header"><span class="fa fa-dashboard"></span> <%= t('.page_header') %></h1>
</section>

<div class="row visible-lg">
  <div class="col-lg-3">
    <div class="panel panel-info">
      <div class="panel-heading">
        <div class="row">
          <div class="col-xs-6">
            <i class="fa fa-shopping-cart fa-5x"></i>
          </div>
          <div class="col-xs-6 text-right">
            <p class="announcement-heading">{{get_items_to_buy()}}</p>
            <p class="announcement-text"><%=t(".items_to_buy")%></p>
          </div>
        </div>
      </div>
      <a href="/#/shopping">
        <div class="panel-footer announcement-bottom">
          <div class="row">
            <div class="col-xs-6">
              <%=t(".view_shopping_details")%>
            </div>
            <div class="col-xs-6 text-right">
              <i class="fa fa-arrow-circle-right"></i>
            </div>
          </div>
        </div>
      </a>
    </div>
  </div>
  <div class="col-lg-3">
    <div class="panel panel-warning">
      <div class="panel-heading">
        <div class="row">
          <div class="col-xs-6">
            <i class="fa fa-bitcoin fa-5x"></i>
          </div>
          <div class="col-xs-6 text-right">
            <p class="announcement-heading">{{get_you_owe()}}</p>
            <p class="announcement-text"><%=t(".you_owe")%></p>
          </div>
        </div>
      </div>
      <a href="/#/finances">
        <div class="panel-footer announcement-bottom">
          <div class="row">
            <div class="col-xs-6">
              <%=t(".view_finance_details")%>
            </div>
            <div class="col-xs-6 text-right">
              <i class="fa fa-arrow-circle-right"></i>
            </div>
          </div>
        </div>
      </a>
    </div>
  </div>
  <div class="col-lg-3">
    <div class="panel panel-danger">
      <div class="panel-heading">
        <div class="row">
          <div class="col-xs-6">
            <i class="fa fa-wrench fa-5x"></i>
          </div>
          <div class="col-xs-6 text-right">
            <p class="announcement-heading">{{get_items_borrowed()}}</p>
            <p class="announcement-text"><%=t(".items_borrowed")%></p>
          </div>
        </div>
      </div>
      <a href="/#/share">
        <div class="panel-footer announcement-bottom">
          <div class="row">
            <div class="col-xs-6">
                <%=t(".view_share_details")%>
            </div>
            <div class="col-xs-6 text-right">
              <i class="fa fa-arrow-circle-right"></i>
            </div>
          </div>
        </div>
      </a>
    </div>
  </div>
  <div class="col-lg-3">
    <div class="panel panel-success">
      <div class="panel-heading">
        <div class="row">
          <div class="col-xs-6">
            <i class="fa fa-flash fa-5x"></i>
          </div>
          <div class="col-xs-6 text-right">
            <p class="announcement-heading">{{get_resource_usage()}}</p>
            <p class="announcement-text"><%=t(".view_resource_titel")%></p>
          </div>
        </div>
      </div>
      <a href="/#/resources">
        <div class="panel-footer announcement-bottom">
          <div class="row">
            <div class="col-xs-6">
              <%=t(".view_resource_details")%>
            </div>
            <div class="col-xs-6 text-right">
              <i class="fa fa-arrow-circle-right"></i>
            </div>
          </div>
        </div>
      </a>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <span class="glyphicon glyphicon-shopping-cart"></span> <%=t(".panel_shopping_header")%>
      </div>
      <div class="panel-body">
        <ul class="list-group" ng-show="shoppinglists.length!==0">
          <li class="list-group-item" ng-repeat="list in shoppinglists">
            <span class="badge">{{list.items.length}}</span>
            <h4 class="list-group-item-heading">{{list.name}}</h4>
            <p class="list-group-item-text">{{ get_shoppinglist_summary(list) }}</p>
          </li>
        </ul>
        <p ng-show="shoppinglists.length===0"><%=t(".no_shoppinglists")%></p>
        <div class="text-right">
          <a href="/#/shopping"><%=t(".view_details")%> <i class="fa fa-arrow-circle-right"></i></a>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <span class="glyphicon glyphicon-euro"></span>  <%=t(".panel_finances_header")%>
      </div>
      <div class="panel-body">
          <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Bewohner</th>
                  <th class="text-right">Saldo</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>1</td>
                  <td>Mark</td>
                  <td class="text-right">-100.00</td>
                </tr>
                <tr>
                  <td>2</td>
                  <td>Jacob</td>
                  <td class="text-right">+100.00</td>
                </tr>
              </tbody>
              <tfoot>
                  <tr>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td class="text-right">0.00</td>
                  </tr>
              </tfoot>
            </table>
            <div class="text-right">
              <a href="/#/finances"><%=t(".view_details")%> <i class="fa fa-arrow-circle-right"></i></a>
            </div>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <span class="glyphicon glyphicon-share"></span>  <%=t(".panel_share_header")%>
      </div>
      <div class="panel-body">
          <div class="row">
            <div class="col-md-6">
              <div class="panel panel-success">
                  <div class="panel-heading">Verfügbar</div>
                  <div class="panel-body">
                    <ul>
                      <li>Bohrmaschine</li>
                      <li>Hammer</li>
                      <li>Lötkolben</li>
                    </ul>
                  </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="panel panel-warning">
                  <div class="panel-heading">Verliehen</div>
                  <div class="panel-body">
                    <ul>
                      <li>Fahrrad -> (<a href="#">niki des Pferd</a>)</li>
                    </ul>
                  </div>
              </div>
            </div>
          </div>
          <div class="text-right">
            <a href="/#/share"><%=t(".view_details")%> <i class="fa fa-arrow-circle-right"></i></a>
          </div>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <span class="glyphicon glyphicon-globe"></span>  <%=t(".panel_resources_header")%>
        <div class="btn-group btn-group-xs pull-right">
          <button type="button" class="btn btn-default">Monat</button>
          <button type="button" class="btn btn-default">Jahr</button>
          <button type="button" class="btn btn-default">5 Jahre</button>
        </div>
      </div>
      <div class="panel-body">
        <canvas id="myChart" width="400" height="200"></canvas>

        <script type="text/javascript">
           var data = {
                    labels : ["January","February","March","April","May","June","July"],
                    datasets : [
                      {
                        fillColor : "rgba(220,220,220,0.5)",
                        strokeColor : "rgba(220,220,220,1)",
                        pointColor : "rgba(220,220,220,1)",
                        pointStrokeColor : "#fff",
                        data : [65,59,90,81,56,55,40]
                      },
                      {
                        fillColor : "rgba(151,187,205,0.5)",
                        strokeColor : "rgba(151,187,205,1)",
                        pointColor : "rgba(151,187,205,1)",
                        pointStrokeColor : "#fff",
                        data : [28,48,40,19,96,27,100]
                      }
                    ]
                  }
            var ctx = document.getElementById("myChart").getContext("2d");
            new Chart(ctx).Line(data,null);
        </script>
        <div class="text-right">
          <a href="/#/resources"><%=t(".view_details")%> <i class="fa fa-arrow-circle-right"></i></a>
        </div>
      </div>
    </div>
  </div>
</div>
