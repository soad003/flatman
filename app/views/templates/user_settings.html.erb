<div class="row">
    <div class="col-md-offset-3 col-md-6">
        <section class="hidden-print">
            <h1 class="page-header"><span class="fa fa-cog"></span> <%= t('.page_header') %></h1>
        </section>

        <div class="row">
            <div class="col-xs-4">
                <img ng-src="{{user.image_path}}" class="img-thumbnail" style="width: 80px; height: 80px;">
            </div>
            <div class="col-xs-8">
                <form class="form-horizontal" role="form">
                    <div class="form-group">
                        <label class="col-xs-2 col-sm-2 control-label"><%= t(".name")%></label>
                        <div class="col-xs-10 col-sm-10">
                          <p class="form-control-static">{{user.name}}</p>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-xs-2 col-sm-2 control-label"><%= t(".email")%></label>
                        <div class="col-xs-10 col-sm-10">
                          <p class="form-control-static">{{user.email}}</p>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-xs-2 col-sm-2 control-label"><%= t(".provider")%></label>
                        <div class="col-xs-10 col-sm-10">
                            <a class="btn btn-social-icon btn-facebook"
                                ng-show="user.provider=='facebook'"><i class="fa fa-facebook"></i>
                            </a>
                            <a class="btn btn-social-icon btn-google-plus"
                                ng-show="!(user.provider=='facebook')"><i class="fa fa-google-plus"></i>
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
