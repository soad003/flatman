<div class="row">
    <div class="col-md-offset-3 col-md-6">
        <section class="hidden-print">
            <h1 class="page-header"><%= t('.page_header') %></h1>
        </section>
        <form class="form-horizontal" role="form">
            <div class="form-group">
                <img ng-src="{{user.image_path}}" class="img-thumbnail" style="width: 80px; height: 80px;">
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label"><%= t(".name")%></label>
                <div class="col-sm-10">
                  <p class="form-control-static">{{user.name}}</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label"><%= t(".email")%></label>
                <div class="col-sm-10">
                  <p class="form-control-static">{{user.email}}</p>
                </div>
            </div>
        </form>
    </div>
</div>
