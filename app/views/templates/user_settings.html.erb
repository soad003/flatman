<div class="row">
    <div class="col-md-offset-3 col-md-6">
        <section class="hidden-print">
            <h1 class="page-header"><span class="fa fa-cog"></span> <%= t('.page_header') %></h1>
        </section>

        <div class="row">
            <div class="col-xs-4">
                <img ng-src="{{user.image_path}}" class="img-thumbnail" style="width: 80px; height: 80px;">
            </div>
            <div class="col-xs-8">
                <form  name="content_form" ng-submit="update_user()" class="form-horizontal" role="form">
                    <div class="form-group">
                        <label class="col-xs-4 col-sm-4 control-label"><%= t(".name")%></label>
                        <div class="col-xs-8 col-sm-8">
                          <p class="form-control-static">{{user.name}}</p>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-xs-4 col-sm-4 control-label"><%= t(".email")%></label>
                        <div class="col-xs-8 col-sm-8">
                          <p class="form-control-static">{{user.email}}</p>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-xs-4 col-sm-4 control-label"><%= t(".provider")%></label>
                        <div class="col-xs-8 col-sm-8">
                            <a class="btn btn-social-icon btn-facebook"
                                ng-show="user.provider=='facebook'"><i class="fa fa-facebook"></i>
                            </a>
                            <a class="btn btn-social-icon btn-google-plus"
                                ng-show="!(user.provider=='facebook')"><i class="fa fa-google-plus"></i>
                            </a>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-xs-4 col-sm-4 control-label"><%= t(".device")%></label>
                        <div class="col-xs-8 col-sm-8">
                            <p class="form-control-static"><% if browser.device.mobile? %>
                                <% if browser.platform.android? %>
                                    <i class="fa fa-android fa-lg"></i>
                                <% elsif browser.platform.ios? %>
                                    <i class="fa fa-apple fa-lg"></i>
                                <% else %>
                                    <i class="fa fa-mobile fa-lg"></i>
                                <% end %>

                                <% if is_app_user? %>
                                    <i class="fa fa-heart fa-lg"></i>
                                <% end %>
                            <% else %>
                                <i class="fa fa-desktop fa-lg"></i>
                            <% end %></p>
                                
                            
<!--                             <%= browser.to_s %>
                            <%= request.user_agent %> -->
                        </div>
                      </div>
                      <div class="form-group">
                        <label class="col-xs-4 col-sm-4 control-label"><%=t('.pushflag')%></label>
                        <div class="col-xs-8 col-sm-8">
                            <input id="pushflag" ng-model="user.pushflag" type="checkbox" >
                        </div>
                    </div>

                    <div class="form-group">
                      <div class="row">
                        <div class="col-md-4 col-md-offset-8">
                         <button class = "btn btn-sm btn-success btn-block" title ="<%= t('.save_btn') %>" ng-disabled="!is_dirty()">
                            <span class="glyphicon glyphicon-ok"></span> <%= t('.save_btn') %>
                          </button>
                        </div>
                      </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
