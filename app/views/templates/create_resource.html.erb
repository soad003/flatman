<% content_for :title, t('.page_title') %>
<% content_for :page_header, t('.page_header') %>



	<div class="page-head">
      <h1 class="page-header"><span class="glyphicon glyphicon-globe"></span> <%= t('.page_header') %> </h1>
  </div>

  <div class="row">

<div class="col-md-offset-3 col-md-6">
      <form>

          <div class="form-group">
          <label for="ressource_name"><%= t('.name') %> </label>
            <div class="input-group">
              <input autofocus="autofocus" id="ressource_name" name="ressource_name" placeholder="<%= t('.name_placeholder') %>" type="text" />
              <span class="input-group-addon">
                <span class="glyphicon glyphicon-pencil"></span>
              </span>
            </div>
          </div>

          <div class="form-group">
          <label for="ressource_unit"><%= t('.unitName') %> </label>
            <div class="input-group">
              <input autofocus="autofocus" id="ressource_unit" name="ressource_unit" placeholder="<%= t('.unitName_placeholder') %>" type="text" />
              <span class="input-group-addon">
                <span class="glyphicon glyphicon-pencil"></span>
              </span>
            </div>
          </div>

          <div class="form-group">
          <label for="ressource_pricePerUnit"><%= t('.priceUnit') %> </label>
            <div class="input-group">
              <input autofocus="autofocus" id="ressource_pricePerUnit" name="ressource_pricePerUnit" placeholder="<%= t('.priceUnit_placeholder') %>" type="text" />
              <span class="input-group-addon">
                <span class="glyphicon glyphicon-euro"></span>
              </span>
            </div>
          </div>

          <div class="form-group">
          <label for="ressource_priceMonth"><%= t('.monthlyCosts') %> </label>
            <div class="input-group">
              <input autofocus="autofocus" id="ressource_priceMonth" name="ressource_priceMonth" placeholder="<%= t('.monthlyCosts_placeholder') %>" type="text" />
              <span class="input-group-addon">
                <span class="glyphicon glyphicon-euro"></span>
              </span>
            </div>
          </div>

          <div class="form-group">
          <label for="ressource_priceYear"><%= t('.annualCosts') %> </label>
            <div class="input-group">
              <input autofocus="autofocus" id="ressource_priceYear" name="ressource_priceYear" placeholder="<%= t('.annualCosts_placeholder') %>" type="text" />
              <span class="input-group-addon">
                <span class="glyphicon glyphicon-euro"></span>
              </span>
            </div>
          </div>

          <div class="form-group">
          <label for="ressource_name"><%= t('.startValue') %> </label>
            <div class="input-group">
              <input autofocus="autofocus" id="ressource_startValue" name="ressource_startValue" placeholder="<%= t('.startValue_placeholder') %>" type="text" />
              <span class="input-group-addon">
                <span class="glyphicon glyphicon-wrench"></span>
              </span>
            </div>
          </div>
          


      <div class="row">
          <div class="col-md-2 col-md-offset-10">
           <button class = "btn btn-sm btn-success btn-block" title ="<%= t('buttons.titles.decision.save') %>" ng-disabled="!is_dirty()">
              <span class="glyphicon glyphicon-ok"></span> <%= t('buttons.labels.decision.save.enabled') %>
            </button>
          </div>
        </div>
      </form>

</div>

</div>


