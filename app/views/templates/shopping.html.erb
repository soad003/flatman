<div>
    <div class="row">
        <div class="col-md-2">&nbsp;</div>
        <div class="form-group col-md-8">
          <form role="form" ng-submit="addList()" name="listForm">
              <div class="input-group">
                  <input type="text" class="form-control" ng-model="ListName" maxlength="30" placeholder="<%= t('.new_list_placeholder') %>" required>
                  <span class="input-group-btn">
                    <button class="btn btn-primary" type="submit" type="submit" ng-disabled="!listForm.$valid">
                      <span class="glyphicon glyphicon-plus"></span> <%= t(".add") %>
                    </button>
                  </span>
               </div>
           </form>
        </div>
        <div class="col-md-2">&nbsp;</div>
    </div>
    <div class="row">
        <div class="col-md-4" ng-repeat="list in lists track by $index">
            <div class="panel panel-{{getColor($index)}}">
                <div class="panel-heading">
                    <div class="form-group">
                        <strong>{{list.name}}</strong>
                        <div class="btn-group pull-right">
                          <button class="btn btn-default btn-xs " type="button" ng-click="removeList(list)">
                            <span class="glyphicon glyphicon-trash"></span>
                          </button>
                        </div>
                    </div>
                    <ul class="list-unstyled">
                        <li ng-repeat="item in list.items">
                          <input id="{{''+$parent.$index+$index}}" type="checkbox" ng-model="item.checked" ng-change="changeChecked(list,item)">
                          <label for="{{''+$parent.$index+$index}}" class="done-{{item.checked}}">
                            {{item.name}}
                          </label>
                          <a href="" class="pull-right" ng-click="removeItem(list,item)">
                            <span class="glyphicon glyphicon-remove"></span>
                          </a>
                        </li>
                    </ul>
                </div>
                <div class="panel-footer announcement-bottom">
                    <form role="form" name="Itemform" ng-submit="addItem(list)">
                        <div class="input-group">
                          <input type="text" class="form-control"
                                  ng-model="list.new_Text"
                                  maxlength="30"
                                  placeholder="<%= t(".new_item_placeholder") %>" required>
                          <span class="input-group-btn">
                            <button class="btn btn-primary"
                                    type="submit"
                                    ng-disabled="!Itemform.$valid">

                              <span class="glyphicon glyphicon-plus"></span> <%= t(".add") %>
                            </button>
                          </span>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

