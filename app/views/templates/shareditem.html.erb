	        			/>
	        		
			</a>
			
			
			<div class="caption">
				<form 	accept-charset="UTF-8" 
					action="/api/upload" 
					class="new_user" 
					
					enctype="multipart/form-data" 
					id="new_user" 
					method="post">
			
		

	  <div class="field">
	  	
	
	  <div class="actions">
	  		<input name="upload[itemid]" value="{{item.id}}"
	  		<input id="upload_file" 
	  			data-filename-placement="inside" name="upload[file]" type="file" value="<%= t(".add_file") %>">  
	  		<button class="btn btn-primary uplaod_submit"  
	  			
	  			type="submit"><span class="glyphicon glyphicon-open"></span> <%= t(".upload_picture") %></button>	
	  	
			
			
