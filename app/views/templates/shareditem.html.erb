<div class="row">
	
	<div class="col-lg-12">
		<h1 class="page-header"><span class="fa fa-share"> {{item.name}}<span></h1>
	</div>
		
	
	<div class="col-lg-3 ">
		 <div class="thumbnail">
		 	<input type="file" id="fileUpload" ng-show="false" upload-image />
	      	<img class="image-popup img-rounded" ng-src="{{item.image}}"   >
			
	      	<h3>{{item.name}}</h3>
	      	<p><%= t(".image_static_text") %></p>
	      	<p> 
	  	      	<button class="btn btn-primary" ng-class=" {hidden: item.image}"   ng-click="openFileWindow()">
	      			<span class="glyphicon glyphicon-camera"></span> <%= t(".upload_image") %>
	      		</button>
	      		<button class="btn btn-primary" ng-class=" {hidden: !item.image}"  ng-click="openFileWindow()">
	      			<span class="glyphicon glyphicon-camera"></span> <%= t(".change_image") %>
	      		</button>		
	      		<button class="btn btn-error" ng-class=" {hidden: !item.image}" ng-click="removeImage()">
	      			<span class="glyphicon glyphicon-remove"></span> <%= t(".remove_image") %>
	      		</button>	
	    	</p>
	     </div>
    
	    
	</div>	
	
	
	<div class="col-lg-9">
		<form role="form" name="itemform" ng-controller="sharedItemCtrl" ng-submit="updateItem()">
			<div class="panel panel-success">
				 <div class="panel-heading">
					    <h3 class="panel-title">current state: available</h3>
				 </div>
				 
				 <div class="panel-body">
				 	<p>verdammtes glump.</p>
				 	
					    
				   <hr />         
					
				
				
				
				<div class="panel-group">
					<ul class="list-group" >
					
					<label for="description">description</label>
					<textarea 
							ng-model = "item.description"
							ng-maxlength = "255"
							class="form-control" 
							rows="3"
							id="description"
							placeholder="say some words about your fantastic product">
					</textarea>
							
					<br />
					
				<label for="sharingnote">sharing note</label>
					<textarea 
							ng-model = "item.sharingNote"
							ng-maxlength = "255"
							class="form-control" 
							rows="2"
							id="sharingnote"
							placeholder="where is your item now, just visible for you"></textarea>
							
					<br />
				<label for="tags">tags</label>
				
				<input 	type="text" 
						id="tags"
						placeholder="some tags" 
						ng-model="item.tags" 
						data-role="tagsinput" />
				
			
					
							
				</div>
			
			
			
				<p>
				
				<button class="btn btn-success"
						ng-disabled="!itemform.$valid"
						type="submit">
          			<span class="glyphicon glyphicon-floppy-disk"></span> <%= t(".save") %>
          		</button>
          			        
                  
              
                <a ng-click="removeItem()"><button class="btn btn-danger">
                	<span class="glyphicon glyphicon-remove"></span> <%= t(".remove") %></button>
                </a>	
                
                  <a href="#/share"><button class="btn btn-primary">
                	<span class="glyphicon glyphicon-arrow-left"></span> <%= t(".back") %></button>
                </a>	
               </p>
                </div> </div>
		</form>
	</div>		
		
		
		
</div>

    
