   <div class="modal fade" id="addRessource" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Add Ressource</h4>
      </div>
      <div class="modal-body" style="overflow-y: auto; overflow-x: hidden;">
          <div class="form-group">
          <label for="ressource_name">Name</label>
            <div class="input-group">
              <input autofocus="autofocus" id="ressource_name" name="ressource_name" placeholder="electricity" type="text" />
              <span class="input-group-addon">
                <span class="glyphicon glyphicon-pencil"></span>
              </span>
            </div>
          </div>

          <div class="form-group">
          <label for="ressource_unit">Unit Name</label>
            <div class="input-group">
              <input autofocus="autofocus" id="ressource_unit" name="ressource_unit" placeholder="kw/h" type="text" />
              <span class="input-group-addon">
                <span class="glyphicon glyphicon-pencil"></span>
              </span>
            </div>
          </div>

          <div class="form-group">
          <label for="ressource_pricePerUnit">Price/Unit</label>
            <div class="input-group">
              <input autofocus="autofocus" id="ressource_pricePerUnit" name="ressource_pricePerUnit" placeholder="€ 0,13" type="text" />
              <span class="input-group-addon">
                <span class="glyphicon glyphicon-euro"></span>
              </span>
            </div>
          </div>

          <div class="form-group">
          <label for="ressource_priceMonth">Monthly Costs</label>
            <div class="input-group">
              <input autofocus="autofocus" id="ressource_priceMonth" name="ressource_priceMonth" placeholder="€ 5,45" type="text" />
              <span class="input-group-addon">
                <span class="glyphicon glyphicon-euro"></span>
              </span>
            </div>
          </div>

          <div class="form-group">
          <label for="ressource_priceYear">Annual Costs</label>
            <div class="input-group">
              <input autofocus="autofocus" id="ressource_priceYear" name="ressource_priceYear" placeholder="€ 13,14" type="text" />
              <span class="input-group-addon">
                <span class="glyphicon glyphicon-euro"></span>
              </span>
            </div>
          </div>

          <div class="form-group">
          <label for="ressource_name">Start Value</label>
