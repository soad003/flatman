  <div class="panel panel-default">
  <div class="panel-heading">
    <center>Categories</center>
  </div>
  <div class="panel-body">
   <div style="margin:auto; width:auto; padding:auto border: 1px solid black;">
    <table class="table table-striped">
    <tr ng-repeat="category in AllCategories | limitTo: '5'">
      <th>{{category.cat_name}}</th>
      <th>{{category.listValue}}</th>
    </tr>
   </table>
  </div>
 </div>
</div>
</div>

  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
       <center> Spendings</center>
     </div>
     <div class="panel-body">
      <div style="margin:auto; width:auto; padding:auto border: 1px solid black;">
      <table class="table table-striped">
        <tr>
          <th>Date
          </th>
          <th>Name
          </th>
          <th>Categorie
          </th>
          <th>Value
          </th>
          <th>
          </th>
        </tr>
        <tr ng-repeat="finance in finances | orderBy: 'date' | limitTo: '5' track by $index">
          <th>{{finance.date | date: 'mediumDate'}}
          </th>
          <th>{{finance.name}}
          </th>
          <th>{{finance.cat_name}}
          </th>
          <th>{{finance.value}}
          </th>
          <th>
            <div class="btn-group pull-right">
              <button type="button" class="btn btn-default dropdown-toggle btn-xs" data-toggle="dropdown">
               <span class="glyphicon glyphicon-pencil"></span>
              </button>
              <ul class="dropdown-menu">
                <li>
                  <a href="" ng-click="removeEntry(finance)"><span class="glyphicon glyphicon-trash"></span> remove Entry</a>
                </li>
                <li>
                  <a href="" ng-click="updateEntry(finance)"><span class="glyphicon glyphicon-pencil">edit</span>
                  </a>
                </li>
              </ul>
          </div>
        </th>
        </tr>
      </table>



                <div class="panel-footer announcement-bottom">
                  
                    <div class="text-right">
              <a href="/#/finances_overview">Show All <i class="fa fa-arrow-circle-right"></i></a>
            </div>
          </div>
      </div>
    </div>
  </div>
  <div class="panel panel-default">
      <div class="panel-heading">
       <center> Debts/Balance</center>
     </div>
      <div class="panel-body">
          <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Inhabitant</th>
                  <th class="text-right">Saldo</th>
                  <th>&nbsp;</th>
                </tr>
              </thead>
              <tbody>
                <tr ng-repeat="debts in allDebts track by $index">
                  <td>{{$index + 1}}</td>
                  <td>{{debts.payee_name}}</td>
                  <td class="text-right">{{debts.debt}}</td>
                  <td>
                    <div class="btn-group pull-right">
                     <button type="button" class="btn btn-default dropdown-toggle btn-xs" data-toggle="dropdown">
                       <span class="glyphicon glyphicon-pencil"></span>
                    </button>
                     <ul class="dropdown-menu">
                      <li>
                        <a href="" ng-click="payDebt(debts)"><span class="fa fa-credit-card"></span> pay debt</a>
                     </li>
               </ul>
               </div>
               </td>
              </tr>
              </tbody>
              <tfoot>
                  <tr>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td class="text-right">{{debts()}}</td>
                    <td>&nbsp;</td>
                  </tr>
              </tfoot>
            </table>
    </div>

   </div>
  </div>

  </div>
